<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/titlepagebackground"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/logoimage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                android:scaleType="fitCenter"
                android:src="@drawable/officiallogo"
                android:onClick="harambe"
                />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/logoimage"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="8dp"
                android:text="PhoenixNow"
                android:textColor="#ffffff"
                android:textSize="48sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/signintext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/signinbutton"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@+id/signintext"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/roundbutton"
                android:onClick="signIn"
                android:text="Check-in" />


            <Button
                android:id="@+id/signoutbutton"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@+id/signinbutton"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundbutton"
                android:onClick="signOut"
                android:text="Log Out" />

            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/schedulebutton"
                android:layout_below="@+id/signoutbutton"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundbutton"
                android:onClick="openSchedule"
                android:text="Schedule" />

            <Button
                android:id="@+id/settingsbutton"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@id/schedulebutton"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundbutton"
                android:onClick="openSettings"
                android:text="Settings" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
