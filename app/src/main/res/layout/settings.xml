<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/titlepagebackground">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titletext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Settings"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Switch
        android:id="@+id/settings_checkinNotificationSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:switchPadding="200dp"
        android:text="Notifications"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <!--<Button-->
    <!--android:id="@+id/setreminder_button"-->
    <!--android:layout_width="150dp"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:layout_below="@id/settings_checkinNotificationSwitch"-->
    <!--android:layout_marginRight="20dp"-->
    <!--android:layout_marginTop="10dp"-->
    <!--android:background="@android:color/transparent"-->
    <!--android:gravity="center"-->
    <!--android:text="Set Daily Reminder"-->
    <!--android:textAllCaps="false"-->
    <!--android:textColor="@android:color/white" />-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_checkinNotificationSwitch"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title">

            <TextView
                android:id="@+id/creditstextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:text="Credits"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/creditstextview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/creditstextview"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:text="This app was created and is maintained by ECG Hello World App Club, 2016. \n \n
Development Team: Justin Kerr, Varun Nair, \n Ali Chaudhry and Nicholas (Nick) Day. \n \n
Artwork Designed by: Calder Brown  \n \n
Special thanks to Ms. Kiser, Mrs. Kidd, and Mrs. Webster for supporting PhoenixNow \n \n
Contact the club or the dev team for bug reports, questions, or assistance at \n \n
http://helloworldclub.weebly.com \n \n
or email helloworldappclub@gmail.com"
                android:textAlignment="center"
                android:textSize="10sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="150dp"
                android:layout_below="@id/creditstextview2"
                android:layout_centerHorizontal="true"
                android:src="@drawable/appclublogo" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>